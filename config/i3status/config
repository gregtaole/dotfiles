general {
        colors = true
        color_good = "#0066cc"
        color_bad = "#006600"
        color_separator = "#3399ff"
        interval = 5
}

order += "ipv6"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "battery all"
order += "load"
order += "tztime local"

wireless _first_ {
        format_up = "ðŸ“¶: (%essid) %ip"
        format_down = "ðŸ“¶: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "ðŸ–§ : %ip (%speed)"
        format_down = "ðŸ–§ : down"
}

battery all {
        format = "%status %percentage %remaining"
        status_chr = "ðŸ—²"
        status_bat = "ðŸ”‹"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%free/%total"
}

